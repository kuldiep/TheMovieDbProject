<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="CustomTmdbDetailObj"
            type="com.android_poc.themoviedbproject.pojo.CustomTmdbData" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MovieDetailsFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ivMovieDetailBg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tvMovieNameDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMovieDetailBg"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="@{CustomTmdbDetailObj.title}"
        />

    <TextView
        android:id="@+id/tvMovieReleaseDescriptionDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieNameDetail"
        android:text="@{CustomTmdbDetailObj.description}"
        />

    <TextView
        android:id="@+id/tvMovieReleaseDateDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieReleaseDescriptionDetail"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@{CustomTmdbDetailObj.displayDate}"
        />
    <TextView
        android:id="@+id/tvMovieVotesDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieReleaseDateDetail"
        android:text="@{CustomTmdbDetailObj.voteCount.toString()}"
        />
    <TextView
        android:id="@+id/tvMoviePopularityDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieVotesDetail"
        android:text="@{CustomTmdbDetailObj.popularityCount.toString()}"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>